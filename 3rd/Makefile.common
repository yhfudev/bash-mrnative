	cd $(CUDASDK31)-$(CUDASDK31_VERSION)/ \
		&& mkdir -p $(PREFIX)/opt/$(CUDASDK31)/ \
		&& for i in pkg/sdk/* ; do \
              cp "$i" "$(PREFIX)/opt/$(CUDASDK31)/" \
           done

