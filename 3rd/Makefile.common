	cd $(BZIP2)-$(BZIP2_VERSION)/ && make -j1 PREFIX=$(PREFIX_DEST)/$(PREFIX_CONF)/ uninstall
$(BZIP2)-install: $(PREFIX_DEST)/$(PREFIX_CONF)/lib/libbz2.a
	touch $@

FL_SOURCES+=$(DN_SRC)/$(BZIP2_SRC)
FL_UNINSTALL+=$(BZIP2)-uninstall

