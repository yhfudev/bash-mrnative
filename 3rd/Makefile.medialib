X265_URL=https://github.com/videolan/x265.git

$(DN_SRC)/$(X265_SRC): $(DN_SRC)/created
	if [ ! -d "$(DN_SRC)/$(X265_SRC)" ]; then \
        git clone $(X265_URL) $(DN_SRC)/$(X265)-$(X265_VERSION); \
    fi
	cd $(DN_SRC)/$(X265)-$(X265_VERSION) && git pull #&& git submodule update --init --recursive
	touch $@

$(X265)-$(X265_VERSION)/readme.rst: $(DN_SRC)/$(X265_SRC)
	cd $(DN_SRC)/$(X265)-$(X265_VERSION) && git pull #&& git submodule update --init --recursive
	if [ ! -d "$(X265)-$(X265_VERSION)" ]; then \
        cp -r $(DN_SRC)/$(X265)-$(X265_VERSION)/ $(X265)-$(X265_VERSION); \
    fi
	cd $(X265)-$(X265_VERSION) && git pull #&& git submodule update --init --recursive
	touch $@

else ifeq ($(USE_HG_X265),1) # use mercurial instead

X265_VERSION=hg
X265_SRC=$(X265)-$(X265_VERSION)/.hg
X265_URL=https://bitbucket.org/multicoreware/x265

$(DN_SRC)/$(X265_SRC): $(DN_SRC)/created
	if [ -d "$(DN_SRC)/$(X265_SRC)" ]; then cd $(DN_SRC)/$(X265)-$(X265_VERSION) && hg pull; else hg clone $(X265_URL) $(DN_SRC)/$(X265)-$(X265_VERSION); fi
	touch $@

$(X265)-$(X265_VERSION)/readme.rst: $(DN_SRC)/$(X265_SRC)
	cd $(DN_SRC)/$(X265)-$(X265_VERSION) && hg pull
	if [ -d "$(X265)-$(X265_VERSION)" ]; then cd $(X265)-$(X265_VERSION) && hg pull; else hg clone $(DN_SRC)/$(X265)-$(X265_VERSION)/ $(X265)-$(X265_VERSION); fi
	touch $@

else
$(DN_SRC)/$(X265_SRC): $(DN_SRC)/created
	$(WGET) -O $@ -c $(X265_URL)
	touch $@
$(X265)-$(X265_VERSION)/readme.rst: $(DN_SRC)/$(X265_SRC)
	rm -rf $(X265)-*
	tar -xf $(DN_SRC)/$(X265_SRC)
	mv $(X265)* $(X265)-$(X265_VERSION)
	touch $@
endif

$(X265)-$(X265_VERSION)/mypatched: $(X265)-$(X265_VERSION)/readme.rst
	if [ -d $(X265)-$(X265_VERSION)/.svn ]; then cd $(X265)-$(X265_VERSION)/ && svn revert -R . ; fi
	if [ -d $(X265)-$(X265_VERSION)/.hg ];  then cd $(X265)-$(X265_VERSION)/ && hg update -C . ; fi
	if [ -d $(X265)-$(X265_VERSION)/.git ]; then cd $(X265)-$(X265_VERSION)/ && git status | grep modified | awk '{print $$2}' | xargs git checkout ; fi
	cd $(X265)-$(X265_VERSION)/ && sed -e 's|bool |char |' -i source/x265.h
	touch $@

$(X265)-$(X265_VERSION)/CMakeLists.txt: $(X265)-$(X265_VERSION)/mypatched $(FL_DEP_X265)
	touch $@

$(X265)-$(X265_VERSION)/build-10/Makefile: $(X265)-$(X265_VERSION)/CMakeLists.txt
	cd $(X265)-$(X265_VERSION)/ && mkdir -p build-10 && cd build-10 \
		&& $(ENV_COMPILE) cmake ../source \
            -DCMAKE_INSTALL_PREFIX=$(PREFIX_DEST)/$(PREFIX_CONF)/ \
            -DHIGH_BIT_DEPTH='TRUE' \
            -DEXPORT_C_API='FALSE' \
