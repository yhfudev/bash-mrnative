	cat $(DN_PATCH)/pbs-opencv-cmake-pch-3.1.diff > $@
	touch $@
$(DN_SRC)/$(OPENCV)-git-patch: $(DN_SRC)/created $(DN_PATCH)/pbs-opencv-cmake-pch-3.1.diff
	#fix precompile header error
	cat $(DN_PATCH)/pbs-opencv-cmake-pch-3.1.diff > $@
	touch $@

USE_GIT_OPENCV=1

ifeq ($(USE_GIT_OPENCV),1) # use git instead
OPENCV_VERSION=git
OPENCV_SRC=$(OPENCV)-$(OPENCV_VERSION)/.git
OPENCV_URL=https://github.com/Itseez/opencv.git

$(DN_SRC)/$(OPENCV_SRC): $(DN_SRC)/created
	if [ ! -d "$(DN_SRC)/$(OPENCV_SRC)" ]; then \
        git clone $(OPENCV_URL) $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION); \
    fi
	cd $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION) && git pull #&& git submodule update --init --recursive
	touch $@

$(OPENCV)-$(OPENCV_VERSION)/README.md: $(DN_SRC)/$(OPENCV_SRC)
	cd $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION) && git pull #&& git submodule update --init --recursive
	if [ ! -d "$(OPENCV)-$(OPENCV_VERSION)" ]; then \
        cp -r $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION)/ $(OPENCV)-$(OPENCV_VERSION); \
    fi
	cd $(OPENCV)-$(OPENCV_VERSION) && git pull #&& git submodule update --init --recursive
	touch $@

$(OPENCV)-$(OPENCV_VERSION)/CMakeLists.txt: $(OPENCV)-$(OPENCV_VERSION)/README.md $(FL_DEP_OPENCV)

else # use released files
$(DN_SRC)/$(OPENCV_SRC): $(DN_SRC)/created
	$(WGET) -O $@ -c $(OPENCV_URL)
	touch $@
$(OPENCV)-$(OPENCV_VERSION)/CMakeLists.txt: $(DN_SRC)/$(OPENCV_SRC)
	rm -rf opencv*
	tar -xf $(DN_SRC)/$(OPENCV_SRC)
	#mv opencv* $(OPENCV)-$(OPENCV_VERSION)
	touch $@

endif

$(OPENCV)-$(OPENCV_VERSION)/3rdparty/ippicv/downloads/$(IPPICV_SRC_BASE): $(DN_SRC)/$(IPPICV_SRC)
	mkdir -p $(dir $@)
	cp $(DN_SRC)/$(IPPICV_SRC) $@

$(OPENCV)-$(OPENCV_VERSION)/mypatched: $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION)-patch $(OPENCV)-$(OPENCV_VERSION)/CMakeLists.txt $(OPENCV)-$(OPENCV_VERSION)/3rdparty/ippicv/downloads/$(IPPICV_SRC_BASE)
	if [ -d $(OPENCV)-$(OPENCV_VERSION)/.svn ]; then cd $(OPENCV)-$(OPENCV_VERSION)/ && svn revert -R . ; fi
	if [ -d $(OPENCV)-$(OPENCV_VERSION)/.hg ];  then cd $(OPENCV)-$(OPENCV_VERSION)/ && hg update -C . ; fi
	if [ -d $(OPENCV)-$(OPENCV_VERSION)/.git ]; then cd $(OPENCV)-$(OPENCV_VERSION)/ && git status | grep modified | awk '{print $$2}' | xargs git checkout ; fi
	cd $(OPENCV)-$(OPENCV_VERSION)/ && patch -p1 < $(DN_SRC)/$(OPENCV)-$(OPENCV_VERSION)-patch
	cd $(OPENCV)-$(OPENCV_VERSION)/ \
	    && sed -e '1iint main(void) { return 0; } /*\' \
	        -i samples/cpp/tutorial_code/features2D/AKAZE_tracking/planar_tracking.cpp \
	    && echo "*/" >> samples/cpp/tutorial_code/features2D/AKAZE_tracking/planar_tracking.cpp
	#cd $(OPENCV)-$(OPENCV_VERSION)/ && \
	#    sed -e 's|#include <opencv2/tracking.hpp>|#include <opencv2/video/tracking.hpp>|' \
	#        -i samples/cpp/tutorial_code/features2D/AKAZE_tracking/planar_tracking.cpp
	#        -e 's|uBox = selectROI|uBox = cv::selectROI|'
	touch $@

$(OPENCV)-$(OPENCV_VERSION)/build/Makefile: $(OPENCV)-$(OPENCV_VERSION)/mypatched
	cd $(OPENCV)-$(OPENCV_VERSION)/ && mkdir -p build && cd build \
		&& $(ENV_COMPILE) cmake \
		    -D CMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE CMAKE_INSTALL_RPATH=$(PREFIX)/opt/$(CUDASDK)/lib64 \
			-D CMAKE_BUILD_TYPE=RELEASE \
			-D CMAKE_INSTALL_PREFIX=$(PREFIX_DEST)/$(PREFIX_CONF)/ \
			-D CMAKE_SKIP_RPATH=ON \
			$(CMAKE_ARCH_FLAGS) \
			-D CMAKE_VERBOSE_MAKEFILE=ON -D CMAKE_VERBOSE=ON \
			-D BUILD_opencv_python=OFF -D WITH_QT=OFF \
			-D BUILD_opencv_java=OFF -D BUILD_FAT_JAVA_LIB=OFF \
			-D BUILD_opencv_nonfree=ON \
			-D BUILD_opencv_superres=ON \
			-D BUILD_EXAMPLES=ON \
			-D INSTALL_C_EXAMPLES=ON \
			-D BUILD_opencv_apps=OFF -D BUILD_ANDROID_EXAMPLES=OFF \
			-D BUILD_DOCS=OFF -D BUILD_PERF_TESTS=OFF -D BUILD_TESTS=OFF \
			-D BUILD_ZLIB=ON \
			-D BUILD_PNG=ON \
			-D BUILD_TIFF=ON \
			-D BUILD_JASPER=ON \
			-D BUILD_JPEG=ON \
			-D BUILD_OPENEXR=ON \
			-D BUILD_SHARED_LIBS=ON \
			-D BUILD_WITH_DEBUG_INFO=OFF \
			$(OPENCV_GPU_SUPPORT_CMAKE) \
			-D WITH_OPENCL=ON \
			-D WITH_OPENGL=ON \
			-D WITH_TBB=ON \
			-D WITH_1394=ON \
			-D WITH_FFMPEG=ON -D FFMPEG_INCLUDE_DIR=$(PREFIX_DEST)/$(PREFIX_CONF)/include -D FFMPEG_LIB_DIR=$(PREFIX_DEST)/$(PREFIX_CONF)/lib \
			\
			-D CMAKE_CXX_FLAGS=" -I1 `$(ENV_COMPILE) $(PREFIX_DEST)/$(PREFIX_CONF)/bin/pkg-config --cflags --libs libass fontconfig fribidi freetype2 $(LIBZVBI)-0.2 libcdio libcdio_cdda libcdio_paranoia $(XAVS) libopenjpeg1` $(CUDA_CFLAGS) " \
			-D CMAKE_C_FLAGS=" -I2 `$(ENV_COMPILE) $(PREFIX_DEST)/$(PREFIX_CONF)/bin/pkg-config --cflags --libs libass fontconfig fribidi freetype2 $(LIBZVBI)-0.2 libcdio libcdio_cdda libcdio_paranoia $(XAVS) libopenjpeg1` $(CUDA_CFLAGS) " \
			-D CMAKE_EXE_LINKER_FLAGS="-L1 -L$(PREFIX_DEST)/$(PREFIX_CONF)/lib -lmp3lame -lvorbis -lfaac -lx264 -lxvidcore -lfreetype -lGLU $(CUDA_LIBS)" \
			-D CMAKE_EXE_LINKER_FLAGS_RELEASE="-L2 -L$(PREFIX_DEST)/$(PREFIX_CONF)/lib -lmp3lame -lvorbis -lfaac -lx264 -lxvidcore -lfreetype -lGLU $(CUDA_LIBS)" \
			-D CMAKE_SHARED_LINKER_FLAGS="-L3 -L$(PREFIX_DEST)/$(PREFIX_CONF)/lib -lmp3lame -lvorbis -lfaac -lx264 -lxvidcore -lfreetype -lGLU $(CUDA_LIBS)" \
			.. \
			$(NULL)
# -D BZIP2_LIBRARIES=$(PREFIX_DEST)/$(PREFIX_CONF)/lib/libbz2.a

$(OPENCV)-$(OPENCV_VERSION)/build/lib/libopencv_core.so: $(OPENCV)-$(OPENCV_VERSION)/build/Makefile
	cd $(OPENCV)-$(OPENCV_VERSION)/build && LD_LIBRARY_PATH=$(PREFIX_DEST)/$(PREFIX_CONF)/lib:$(PREFIX)/opt/$(CUDASDK)/lib64:$(PREFIX)/opt/$(CUDASDK)/lib:$(LD_LIBRARY_PATH) $(ENV_COMPILE) make $(MAKE_ARG) VERBOSE=1
$(PREFIX_DEST)/$(PREFIX_CONF)/lib/libopencv_core.so: $(OPENCV)-$(OPENCV_VERSION)/build/lib/libopencv_core.so
	cd $(OPENCV)-$(OPENCV_VERSION)/build && $(ENV_COMPILE) make install
	#cp $(OPENCV)-$(OPENCV_VERSION)/3rdparty/lib/*.a $(PREFIX_DEST)/$(PREFIX_CONF)/lib
	touch $@

$(OPENCV)-uninstall: $(OPENCV)-$(OPENCV_VERSION)/build/lib/libopencv_core.so
	cd $(OPENCV)-$(OPENCV_VERSION)/build && make uninstall
$(OPENCV)-install: $(PREFIX_DEST)/$(PREFIX_CONF)/lib/libopencv_core.so
	touch $@

FL_SOURCES+=$(DN_SRC)/$(OPENCV_SRC)
FL_UNINSTALL+=$(OPENCV)-uninstall

