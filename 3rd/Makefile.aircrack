	cd $(HASHCAT)-$(HASHCAT_VERSION)/ && $(ENV_COMPILE) make $(MAKE_ARG) LDFLAGS="-L$(PREFIX_DEST)/$(PREFIX_CONF)/lib/" CFLAGS="-std=gnu99 $(CFLAGS) -Iinclude" posix$(ARCHBITS)
