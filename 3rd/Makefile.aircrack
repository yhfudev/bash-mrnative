	cd $(HASHCAT)-$(HASHCAT_VERSION)/build && make uninstall
$(HASHCAT)-install: $(PREFIX_DEST)/$(PREFIX_CONF)/bin/hashcat-cli$(ARCHBITS).bin
	touch $@

